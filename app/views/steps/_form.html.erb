<div class='container' id='new-step-form'>
	<h4>Add Steps for Preparation</h4>
	<%= bootstrap_form_for(@step, url: (!!@step.id ? recipe_step_path(@recipe, @step) : recipe_steps_path(@recipe)), remote: true) do |f| %>
		<%= f.hidden_field :recipe_id, value: @recipe.id %>
		<div class='form-row'>
			<%= f.number_field :step_order, label: 'Order', wrapper: { class: 'col-3' }, value: @recipe.next_step_index %>
			<%= f.number_field :prep_time_value, label: 'Prep Time', wrapper: { class: 'col-3' }, value: 1 %>
			<%= f.select :prep_time_units, [['Seconds','seconds'],['Minutes','minutes'],['Hours','hours']], label: '', wrapper: { class: 'col-4' } %>
			<%= f.form_group :is_active, class: 'col-2 justify-content-bottom' do %>
				<%= f.check_box :is_active, label: 'Active' %>
			<% end %>
		</div>
		<%= f.text_area :instruction, rows: 8 %>
		<%= f.submit 'Update Steps', extra_class: 'btn-block' %>
	<% end %>
</div>