<li class='wizard-list-item font-cursive'>
  <span class='wizard-list-display'><%= step.step_order.to_s << '.  ' << truncate(step.instruction, length: 20) %></span>
  <span class='float-right'>
    <%= link_to (icon('fas', 'pencil')), edit_recipe_step_path(@recipe, step), remote: true %>
    <%= link_to (icon('fas', 'times')), recipe_step_path(@recipe, step), remote: true, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
  </span>
</li>