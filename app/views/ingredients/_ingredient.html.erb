<% if ingredient != @ingredient %>
	<li class='ingredient-wizard-list-item'>
		<span><%= ingredient.display_ingredient_list %></span>
		<span class='float-right'>
			<%= link_to (fa_icon 'pencil'), edit_recipe_ingredient_path(@recipe, ingredient), remote: true %>
			<%= link_to (fa_icon 'times'), recipe_ingredient_path(@recipe, ingredient), method: :delete, remote: true, data: { confirm: 'Are you sure you want to delete this?' } %>
		</span>
	</li>
<% else %>
	<li class='ingredient-wizard-list-item-active'>
		<span><%= ingredient.display_ingredient_list %></span>
		<span class='float-right'>
			<%= fa_icon 'pencil' %>
			<%= fa_icon 'times' %>
		</span>
	</li>
<% end %>