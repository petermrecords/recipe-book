<div class='wizard-nav'>
	<div class='container'>
		<ul class='nav'>
			<li class='nav-item'>
				<%= link_to 'Description', edit_recipe_path(@recipe), remote: true, class: 'nav-link' %>
			</li>
			<li class='nav-item'>
				<%= link_to 'Ingredients', new_recipe_ingredient_path(@recipe), remote: true, class: 'nav-link' %>
			</li>
			<li class='nav-item'>
				<%= link_to 'Instructions', new_recipe_step_path(@recipe), remote: true, class: 'nav-link' %>
			</li>
			<% if @recipe.steps.any? && @recipe.ingredients.any? %>
				<li class='nav-item'>
					<%= link_to (icon('fas','eye') << ' Preview'), recipe_preview_path(@recipe), class: 'nav-link text-warning'%>
				</li>
				<li class='nav-item'>
					<%= link_to (icon('fas','check-circle') << ' Publish'), recipe_publish_path(@recipe), method: :put, data: { confirm: 'Are you sure you are ready to publish this?' }, class: 'nav-link text-success' %>
				</li>
			<% else %>
				<li class='nav-item'>
					<%= link_to (icon('fas','eye') << ' Preview'), recipe_preview_path(@recipe), class: 'nav-link disabled' %>
				</li>
				<li class='nav-item'>
					<%= link_to (icon('fas','check-circle') << ' Publish'), recipe_publish_path(@recipe), method: :put, data: { confirm: 'Are you sure you are ready to publish this?' }, class: 'nav-link disabled' %>
				</li>
			<% end %>
			<li class='nav-item'>
				<%= link_to (icon('fas','exclamation-circle') << ' Delete'), recipe_path(@recipe), method: :delete, remote: true, data: { confirm: 'Are you sure you want to delete this?' }, class: 'nav-link text-danger' %>
			</li>
			<li class='nav-item'>
				<%= link_to 'Back', :back, class: 'nav-link' %>
			</li>
		</ul>
	</div>
</div>